<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/bn_card"
        app:cardBackgroundColor="@color/colorAccent"
        android:layout_margin="5dp"
        app:cardElevation="5dp"
        android:padding="5dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="casual"
                    android:id="@+id/bn_name"
                    android:text="Name"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/bn_more"
                    android:padding="5dp"
                    android:gravity="center"
                    android:drawableRight="@drawable/ic_more_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <RelativeLayout
                android:paddingVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="230dp">
                <ImageView
                    android:id="@+id/bn_image"
                    android:src="@drawable/ic_launcher_foreground"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="220dp" />
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="50dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="160dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp">
                    <TextView
                        android:fontFamily="casual"
                        android:id="@+id/bn_count"
                        android:textStyle="bold"
                        android:text="0"
                        android:textSize="25dp"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:background="@color/cardview_shadow_start_color"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:paddingVertical="5dp"
                        android:background="@color/cardview_shadow_start_color"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:paddingHorizontal="30dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:fontFamily="casual"
                                android:textColor="@color/colorWhite"
                                android:text="Date"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:fontFamily="casual"
                                android:textColor="@color/colorWhite"
                                android:id="@+id/bn_date"
                                android:text="date"
                                android:layout_marginLeft="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:paddingHorizontal="30dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:fontFamily="casual"
                                android:textColor="@color/colorWhite"
                                android:text="Size"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:fontFamily="casual"
                                android:textColor="@color/colorWhite"
                                android:id="@+id/bn_size"
                                android:text="ListSize"
                                android:layout_marginLeft="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:paddingVertical="5dp"
                        android:background="@color/cardview_shadow_start_color"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:paddingHorizontal="30dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:fontFamily="casual"
                                android:textColor="@color/colorWhite"
                                android:text="Watched"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:fontFamily="casual"
                                android:textColor="@color/colorWhite"
                                android:id="@+id/bn_watched"
                                android:text="Watched"
                                android:layout_marginLeft="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:paddingHorizontal="30dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:fontFamily="casual"
                                android:textColor="@color/colorWhite"
                                android:text="Displayed"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:fontFamily="casual"
                                android:textColor="@color/colorWhite"
                                android:id="@+id/bn_displayed"
                                android:text="Displayed"
                                android:layout_marginLeft="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:fontFamily="casual"
                android:textColor="@color/colorWhite"
                android:id="@+id/bn_address"
                android:text="Address"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>